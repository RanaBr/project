import scipy.io.wavfile
import scipy.signal
import numpy as np
from numpy import sin, cos ,pi , linspace
import matplotlib.pyplot as plt
import sounddevice as sd
from numpy.random import randn

#lit un signak du fichier audio
fs , signalOriginal = scipy.io.wavfile.read('erwin.wav')
times = np.arange(len(signalOriginal))/fs

print("signa=" , signalOriginal)
print("frequence= ",fs)
# genere un signal bruyant
t = linspace(-1 , 1,201)
x = (sin(2*pi*0.75*t*(1-t)+2.1)+0.1*sin(2*pi*1.25*t+1)+0.18*cos(2*pi*3.85*t))
xn=x +randn(len(t))*0.08
#association  signal bruyant et  signal de d√©part
signalbruit=signalOriginal + xn
